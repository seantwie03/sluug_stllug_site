---
interface Props {
    meetingName: string;
    meetingDate: Date;
}

const { meetingName, meetingDate } = Astro.props;
---

<div>
    <p class="text-sm font-medium leading-relaxed mt-3 mb-0">
        {meetingDate.toLocaleDateString('default', { month: 'long', day: '2-digit', year: 'numeric' })}
    </p>
    <h2 class="mt-0 mb-2">
        {meetingName}
    </h2>
</div>
